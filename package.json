{
  "name": "ejs-apollo-typescript-sequelize-starter",
  "version": "0.1.0",
  "description": "A starter project for building mpa's using ejs templates and backed by a graphql api",
  "main": "index.js",
  "scripts": {
    "test": "env TS_NODE_COMPILER_OPTIONS='{\"module\": \"commonjs\"}' mocha -r ts-node/register 'test/**/*ts'",
    "build:server": "tsc",
    "build:client": "webpack --mode production",
    "build": "rm -rf dist && npm run test && npm run build:server && npm run build:client",
    "start": "NODE_ENV=production node dist/index.js",
    "dev": "npm run build && npm-run-all --parallel watch:build-server watch:build-client watch:start",
    "watch:build-client": "webpack --watch",
    "watch:build-server": "tsc --watch",
    "watch:start": "nodemon \"./dist/index.js\" --watch \"./dist\""
  },
  "author": "Frederik J. Eriksen",
  "license": "ISC",
  "private": true,
  "dependencies": {
    "apollo-server-express": "^2.23.0",
    "bcrypt": "^5.0.1",
    "body-parser": "^1.19.0",
    "config": "^3.3.6",
    "cookie-parser": "^1.4.5",
    "ejs": "^3.1.6",
    "express": "^4.17.1",
    "graphql-tools": "^7.0.4",
    "helmet": "^4.5.0",
    "inversify": "^5.0.5",
    "jquery": "^3.6.0",
    "merge-graphql-schemas": "^1.7.8",
    "mysql2": "^2.2.5",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^6.6.7",
    "sequelize": "^5.22.0",
    "uuid": "^8.3.2",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@types/chai": "^4.2.16",
    "@types/express": "^4.17.11",
    "@types/jquery": "^3.5.5",
    "@types/mocha": "^8.2.2",
    "@types/node": "^14.14.41",
    "babel-loader": "^8.2.2",
    "chai": "^4.3.4",
    "copy-webpack-plugin": "^8.1.1",
    "css-minimizer-webpack-plugin": "^2.0.0",
    "ejs-compiled-loader": "^3.0.0",
    "html-webpack-plugin": "^5.3.1",
    "mini-css-extract-plugin": "^1.5.0",
    "mocha": "^8.3.2",
    "nodemon": "^2.0.7",
    "npm-run-all": "^4.1.5",
    "script-loader": "^0.7.2",
    "sequelize-cli": "^6.2.0",
    "sequelize-typescript": "^1.1.0",
    "style-loader": "^2.0.0",
    "terser-webpack-plugin": "^5.1.1",
    "ts-loader": "^9.0.2",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.4",
    "webpack": "^5.35.0",
    "webpack-cli": "^4.6.0"
  }
}
